@model IdentityRole;
@{
    ViewData["Title"] = "Update Role";

}

<h1>Update @Model.Name</h1>
<div>
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]"></partial>
    <form method="post" >
        <div class="row mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control " placeholder=" Enter Role Name">
            </div>
            <span asp-validation-for="Name" class="text-danger "></span>
            
        </div>
      
         <button type="submit" class=" w-100 btn btn-sm btn-primary" asp-route-roleId="@Model.Id">Update</button>
 
    </form>

           

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}



