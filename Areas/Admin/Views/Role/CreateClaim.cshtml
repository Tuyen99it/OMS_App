
@using Microsoft.AspNetCore.Identity;
@model ClaimCreateViewModel;
@{
    ViewData["Title"] = "Create Claim";
    var role=ViewBag.Role as IdentityRole;
}

<h1>Create claim</h1>
<div>
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]"></partial>
    <form method="post">
        <div class="row mb-3">
            <label asp-for="ClaimType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ClaimType" class="form-control " placeholder=" Enter Role Name">
                <span asp-validation-for="ClaimType" class="text-danger "></span>
  

            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ClaimValue" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ClaimValue" class="form-control " placeholder=" Enter Role Name">
                <span asp-validation-for="ClaimValue" class="text-danger "></span>

            </div>
        </div>
       
        <div class="col-2">
            <button type="submit" class=" w-100 btn btn-sm btn-primary"  asp-route-roleId="@role.Id">Create</button>
        </div>
    </form>
</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
