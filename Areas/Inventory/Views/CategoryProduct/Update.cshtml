@using OMS_App.Areas.Inventory.Dtos
@model ProductNameUpdateDto
@{
    ViewData["Title"] = "Update product";
}

<h1>Update Category</h1>

<form method="post">
    <div class="row gx-2 d-flex align-items-center">

        <input asp-for="Id" type="hidden">

        <div class="col-2">
            <input asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger ms-2"></span>
        </div>
        <div class="col-6">

            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger ms-2"></span>
        </div>

        <div class="col-1">
            <button type="submit" class="w-100 btn btn-md btn-primary" asp-action="Update"
                asp-controller="ProductInventory" asp-area="Inventory">Update</button>
        </div>
    </div>


</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
