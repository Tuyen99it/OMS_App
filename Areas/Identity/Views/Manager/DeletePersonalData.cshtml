@using OMS_App.Areas.Identity.Controllers;
@using OMS_App.Areas.Identity.Models;

@model DeletePersonalDataViewModel
@{
    ViewData["Title"] = "Configure authenticator app";
    ViewData["ActivePage"] = ManageNavView.DeletePersonalData;
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]"></partial>
<h3>@ViewData["Title"]</h3>   
<div  class="alert alert-danger">
    <strong>
        <p> Deleting this data will permanently remove your account, and that is not recovered</p>
    </strong>
</div>
<div>
    <form method="post" id="deleting-user-data">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
            <input class="form-control" asp-for="Password" placeholder="Please enter your password">
            <label asp-for="Password" class="form-label"></label>
            <span asp-validation-for="Password" class="alert alert-danger"></span>
        </div>
        <button asp-action= "DeletePersonalData" class="btn btn-danger w-100 btn-lg" type="submit">deleting-user-data data and close my account</button>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationSCriptsPartial"></partial>
}
