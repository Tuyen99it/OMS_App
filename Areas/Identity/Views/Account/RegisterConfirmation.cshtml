
@{
    ViewData["Title"] = "Xác nhận đăng ký";
    string emailConfrimationUrl = ViewBag.EmailConfirmationUrl;
    bool displayConfirmationAccountLink = ViewBag.DisplayConfirmationAccountLink;
}

<h1>@ViewBag.Title</h1>

@{
    if (!displayConfirmationAccountLink)
    {
        <p>
            This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
            Normally this would be emailed: <a id="confirm-link" href="@emailConfrimationUrl">Click here </a>to confirm your account
        </p>
        <p>
            @emailConfrimationUrl
        </p>
    }
    else
    {
        <p>
            Please check your email to confirm your account.
        </p>
    }
}