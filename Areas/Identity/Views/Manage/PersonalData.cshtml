@using OMS_App.Areas.Identity.Controllers;
@using OMS_App.Areas.Identity.Models;

@model Enable2FaAuthenticationViewModel
@{
    ViewData["Title"] = "Personal data";
    ViewData["ActivePage"] = ManageNavView.PersonalData;
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]"></partial>
<h3>@ViewData["Title"]</h3>   


<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-action="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-action="DeletePersonalData" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>
    

@section Scripts{
    <partial name="_ValidationSCriptsPartial"></partial>
}
